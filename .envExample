# -----------------------------------------------------------------
# DATABASE SWITCH
# -----------------------------------------------------------------
# Set this to 'true' to use Firebase, or 'false' to use MySQL.
# The 'npm run switch-db' command will automatically change this value.
USE_FIREBASE=false

# -----------------------------------------------------------------
# MYSQL DATABASE CONFIGURATION
# -----------------------------------------------------------------
# These values are used only when USE_FIREBASE is set to 'false'.
# The default values are shown after the || in main.js
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_DATABASE=db_alpro
DB_PORT=3306 

# -----------------------------------------------------------------
# API CONFIGURATION
# -----------------------------------------------------------------
# Port for the external Express API server.
API_PORT=3001

# -----------------------------------------------------------------
# FIREBASE CONFIGURATION (For Best Practices)
# -----------------------------------------------------------------
# While your project currently gets these from firebaseConfig.js,
# a better practice is to store them here and modify firebaseConfig.js
# to read from process.env.
# This keeps all your secret keys in one file.
#
# FIREBASE_API_KEY=YOUR_API_KEY
# FIREBASE_AUTH_DOMAIN=YOUR_AUTH_DOMAIN
# FIREBASE_PROJECT_ID=YOUR_PROJECT_ID
# FIREBASE_STORAGE_BUCKET=YOUR_STORAGE_BUCKET
# FIREBASE_MESSAGING_SENDER_ID=YOUR_MESSAGING_SENDER_ID
# FIREBASE_APP_ID=YOUR_APP_ID

# -----------------------------------------------------------------
# ENCRYPTION KEY
# -----------------------------------------------------------------
DB_ENCRYPTION_KEY=youEncrypt